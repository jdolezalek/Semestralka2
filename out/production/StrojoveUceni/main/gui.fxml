<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" prefHeight="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="main.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="500.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="600.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <VBox prefHeight="500.0" prefWidth="400.0">
                    <children>
                        <TextArea fx:id="paragraphArea" onMouseClicked="#wordSelected" prefHeight="500.0" prefWidth="500.0"/>
                    </children>
                </VBox>
                <VBox prefHeight="100.0" prefWidth="400.0">
                    <children>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <TextField fx:id="validateInput" onAction="#validate" promptText="Insert word to validate..."/>
                                <TextField fx:id="newValueInput" onAction="#addMeaning" promptText="Insert new value ..." GridPane.rowIndex="1"/>
                                <Button fx:id="validate" onAction="#validate" mnemonicParsing="false" prefWidth="120.0" text="Validate" GridPane.columnIndex="1"/>
                                <Button fx:id="addValue" onAction="#addMeaning" mnemonicParsing="false" prefWidth="120.0" text="Add Value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="250.0" GridPane.columnIndex="1">
            <children>
                <VBox prefHeight="500.0" prefWidth="250.0">
                    <children>
                        <Label text="Table of meanings:"/>
                        <ListView fx:id="meaningsListView" prefHeight="500.0" prefWidth="250.0"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</GridPane>
